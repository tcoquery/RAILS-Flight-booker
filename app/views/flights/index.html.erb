  <%= form_with(url: "/search", method: "get") do |form| %>
    <%= form.label(:departure_airport, "Departure Airport") %>
    <%= form.select(:departure_airport, options_for_select(@departing_flights)) %>
    <%= form.label(:arrival_airport, "Arrival Airport") %>
    <%= form.select(:arrival_airport, options_for_select(@arriving_flights)) %>
    <%= form.label(:passengers, "Number of passengers") %>
    <%= form.select(:passengers, [1, 2, 3, 4]) %>
    <%= form.label(:year, "Year") %>
    <%= form.select(:year, options_for_select(@year_options)) %>
    <%= form.label(:month, "Month") %>
    <%= form.select(:month, options_for_select(@month_options)) %>
    <%= form.label(:day, "Day") %>
    <%= form.select(:day, options_for_select(@day_options)) %>
  <% end %>

