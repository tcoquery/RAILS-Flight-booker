
  <%= form_with model: @booking do |f| %>
    <div class="relative z-0 mb-6 w-full group">
      <%= f.fields_for :passengers do |sub_form| %>
        <%= sub_form.label :first_name, "First name", class: "font-mono" %>
        <%= sub_form.text_field :first_name, class: "block py-2.5 px-0 mb-3 w-full text-sm text-black bg-transparent border-0 border-b-2 border-black appearance-none  focus:outline-none focus:ring-0 focus:border-orange-600 peer" %>
        <%= sub_form.label :last_name, "Last name", class: "font-mono" %>
        <%= sub_form.text_field :last_name, class: "block py-2.5 px-0 mb-3 w-full text-sm text-black bg-transparent border-0 border-b-2 border-black appearance-none  focus:outline-none focus:ring-0 focus:border-orange-600 peer" %>
        <%= sub_form.label :email, "Email", class: "font-mono" %>
        <%= sub_form.email_field :email, class: "block py-2.5 px-0 w-full text-sm text-black bg-transparent border-0 border-b-2 border-black appearance-none focus:outline-none focus:ring-0 focus:border-orange-600 peer"%>
      <% end %>
      <%= f.hidden_field :flight_id, value: params[:flight_id] %>
      <%= f.submit "Submit", class: "focus:outline-none bg-yellow-400 hover:bg-yellow-500 focus:ring-2 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 mt-4 dark:focus:ring-yellow-900 font-mono" %>
  <% end %>

